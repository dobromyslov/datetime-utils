{
  "name": "@dobromyslov/datetime-utils",
  "version": "1.0.0",
  "description": "Date and time utils for parsing dates from various APIs",
  "license": "MIT",
  "repository": {
    "type": "Github",
    "url": ""
  },
  "author": "Viacheslav Dobromyslov <viacheslav@dobromyslov.ru>",
  "keywords": [
    "datetime",
    "luxon"
  ],
  "files": [
    "dist"
  ],
  "main": "dist",
  "types": "dist",
  "sideEffects": false,
  "scripts": {
    "test": "xo && tsc --noEmit && nyc jasmine-ts",
    "release": "np",
    "build": "del-cli dist && tsc",
    "prepare": "npm run build"
  },
  "dependencies": {
    "luxon": "^1.22.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/jasmine": "^3.5.5",
    "@types/luxon": "^1.21.0",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "del-cli": "^3.0.0",
    "eslint-config-xo": "^0.29.1",
    "eslint-config-xo-typescript": "^0.26.0",
    "jasmine": "^3.5.0",
    "jasmine-ts": "^0.3.0",
    "nyc": "^15.0.0",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5",
    "xo": "^0.26.1"
  },
  "eslintConfig": {
    "extends": [
      "xo/esnext",
      "xo-typescript",
      "xo-typescript/space"
    ]
  },
  "xo": {
    "extends": [
      "xo-typescript"
    ],
    "extensions": [
      "ts"
    ],
    "ignores": [
      "spec/"
    ],
    "space": true,
    "rules": {
      "@typescript-eslint/indent": "off",
      "import/no-unassigned-import": [
        "error",
        {
          "allow": [
            "reflect-metadata"
          ]
        }
      ]
    }
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "include": [
      "src/**"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcovonly",
      "text",
      "text-summary"
    ]
  }
}
